
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Users {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("users")
}

model Card {
  id        Int      @id @default(autoincrement())
  columnId  Int
  title     String
  priority  CardPriority?   @default(LOW)
  position  Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  column    Column  @relation(fields: [columnId], references: [id], onDelete: Cascade)

  @@index([columnId, position])
  @@index([priority])

  @@map("cards")
}

model Column {
  id        Int      @id @default(autoincrement())
  title     String
  position  Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  cards     Card[]

  @@map("columns")
}

model Message {
  id        Int      @id @default(autoincrement())
  text      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("messages")
}

enum CardPriority {
  LOW
  MEDIUM
  HIGH
}